<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_height="wrap_content"
    android:layout_margin="8dp"
    app:cardCornerRadius="8dp"
    app:cardElevation="4dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="16dp"
        android:background="#FFFFFF">

        <!-- Movie Name -->
        <TextView
            android:id="@+id/movieNameTextView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Movie Name"
            android:textStyle="bold"
            android:textSize="14sp"
            android:textColor="#333333"
            android:ellipsize="end"
            android:maxLines="1" />

        <TextView
            android:id="@+id/timeTextView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Show Time"
            android:textStyle="bold"
            android:textSize="14sp"
            android:textColor="#333333"
            android:ellipsize="end"
            android:maxLines="1" />

        <!-- Ticket Quantity and Total Price in one row -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="4dp">

            <!-- Ticket Quantity -->
            <TextView
                android:id="@+id/ticketQuantityTextView"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text="Tickets: 0"
                android:textSize="12sp"
                android:textColor="#555555"
                android:layout_weight="1"
                android:ellipsize="end"
                android:maxLines="1" />

            <!-- Total Price -->
            <TextView
                android:id="@+id/totalPriceTextView"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text="Total: $0.00"
                android:textSize="12sp"
                android:textColor="#555555"
                android:layout_weight="1"
                android:ellipsize="end"
                android:maxLines="1" />
        </LinearLayout>

        <!-- Status and Transaction Type in another row -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="4dp">

            <!-- Status -->
            <TextView
                android:id="@+id/statusTextView"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text="Status: Pending"
                android:textSize="12sp"
                android:textColor="#FF5722"
                android:layout_weight="1"
                android:ellipsize="end"
                android:maxLines="1" />

            <!-- Transaction Type -->
            <TextView
                android:id="@+id/transactionTypeTextView"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text="Type: Purchase"
                android:textSize="12sp"
                android:textColor="#555555"
                android:layout_weight="1"
                android:ellipsize="end"
                android:maxLines="1" />
        </LinearLayout>
    </LinearLayout>
</androidx.cardview.widget.CardView>
